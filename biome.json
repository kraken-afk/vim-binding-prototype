{
	"$schema": "https://biomejs.dev/schemas/1.6.4/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"lineWidth": 120,
		"enabled": true,
		"formatWithErrors": true
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"lineWidth": 120,
			"quoteStyle": "double",
			"semicolons": "always",
			"indentWidth": 2,
			"jsxQuoteStyle": "double",
			"trailingComma": "all",
			"bracketSpacing": true,
			"quoteProperties": "preserve",
			"bracketSameLine": true,
			"arrowParentheses": "always",
			"attributePosition": "multiline"
		}
	}
}
